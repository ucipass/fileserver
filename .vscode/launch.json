    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}/index.js",
            "internalConsoleOptions": "openOnSessionStart",
            "outputCapture": "std",
            "env": {
                "PORT"      : "3001",
                "FILES_DIR" : "/tmp/test",
                "REDIS_URL" : "redis://:foobared@172.18.2.64"
            },
            "skipFiles": [
                "<node_internals>/**"
            ],
        }
    ]
}